#include <iostream>
#include <cmath>
#include <fstream>
#include <Windows.h>
using namespace std;

void display(int sudoku[][9]){
  cout<<endl;
  cout<<"  0 1 2  3 4 5  6 7 8  "<<endl;
  for(int row = 0 ; row<9 ; row++){
    if((row==3)||(row==6)){
      cout<<"-------+------+------"<<endl;
    }
    cout<<row;
    for(int column= 0 ; column < 9 ; column++){
      if((column==3)||(column==6)){
      cout<<"|";
    }
    cout<<" "<<sudoku[row][column];
  }
    cout<<endl;
  }
}

void erase(int sudoku[][9], int sudoku2[][9]){
  int ans;
  int row;
  int col;
  while(ans==0){
  cout<<endl;
  cout<<"Please choose the row of the desired number to erase: (0-8)";
  cin>>row;
  if((row>8)||(row<0)){
    cout<<"ERROR: Please input a proper row to choose from. Starting over."<<endl;
    cout<<endl;
    display(sudoku);
    cout<<endl;
    ans=0;
  }
  else{
  cout<<"Please choose the column of the desired number to erase: ";
  cin>>col;
  if((col>8)||(col<0)){
    cout<<"ERROR: Please input a proper column to choose from. Starting over."<<endl;
    cout<<endl;
    display(sudoku);
    cout<<endl;
    ans=0;
  }
  else{
  if(sudoku2[row][col]!=0){
    cout<<"YOU CAN'T ERASE THAT NUMBER"<<endl;
    cout<<endl;
  }
  else{
  sudoku[row][col]=0;
  }
  display(sudoku);
  cout<<endl;
  cout<<"Do you wish to erase another number? (0-yes/1-no):";
  cin>>ans;
}
}
}
}
void square1(int sudoku[][9], int row, int col, int num,int v, int c){
  int k1=0;
  int j1=0;
  for(int co=0; co<3;co++){
    k1=k1+1;
    for(int rows=0; rows<3;rows++){
      j1=j1+1;
    if(num==sudoku[rows][co]){
      cout<<"That # is already in use in the first square!"<<endl;
      cout<<"Row: "<<rows<<" col: "<<co<<endl;
      j1=j1-1;
    }
  }
  }
  if((v==9)&&(c==9)&&(j1==9)&&(k1==3)){ // If it doesnt exists in the row or column, then the player can use the number
  sudoku[row][col]=num;
  cout<<endl;
}
display(sudoku);
cout<<endl;
}
void square2(int sudoku[][9], int row, int col, int num,int v, int c){
  int k2=0;
