        j2=j2-1;
      }
    }
  }
  if((v==9)&&(c==9)&&(j2==9)&&(k2==3)){ // If it doesnt exists in the row or column, then the player can use the number
  sudoku[row][col]=num;
  cout<<endl;
  }
  display(sudoku);
  cout<<endl;
}
