    k2=k2+1;
    for(int rows=0; rows<3;rows++){
      j2=j2+1;
    if(num==sudoku[rows][co]){
      cout<<"That # is already in use in the second square!"<<endl;
      cout<<"Row: "<<rows<<" col: "<<co<<endl;
      j2=j2-1;
    }
  }
  }
  if((v==9)&&(c==9)&&(j2==9)&&(k2==3)){ // If it doesnt exists in the row or column, then the player can use the number
  sudoku[row][col]=num;
  cout<<endl;
}

display(sudoku);
cout<<endl;
}
